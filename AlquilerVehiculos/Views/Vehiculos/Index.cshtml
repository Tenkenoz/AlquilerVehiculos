@{
    ViewData["Title"] = "Index";
}

<div>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
        <div class="border border-red-500 rounded-xl h-40 flex flex-col justify-between ">
            <div class="flex-1 flex items-center justify-center bg-white text-red-700 font-bold">
                <i class="fa-solid fa-users"> 0</i>
            </div>
            <div class="h-1/5 bg-red-100 text-red-700 text-center p-1 rounded-b-xl">
                CLIENTES
            </div>
        </div>


        <div class="border border-blue-500 rounded-xl h-40 flex flex-col justify-between  ">
            <div class="flex-1 flex items-center justify-center bg-white text-blue-700 font-bold">
                <i class="fa-solid fa-user-tie"> 0</i>
            </div>
            <div class="h-1/5 bg-blue-100 text-blue-700 text-center p-1 rounded-b-xl">
                EMPLEADOS
            </div>
        </div>


        <div class="border border-green-500 rounded-xl h-40 flex flex-col justify-between ">
            <div class="flex-1 flex items-center justify-center bg-white text-green-700 font-bold">
                <i class="fa-solid fa-dollar-sign"> 0</i>
            </div>
            <div class="h-1/5 bg-green-100 text-green-700 text-center p-1 rounded-b-xl">
                PAGOS
            </div>
        </div>

        <!-- Reservas -->
        <div class="border border-yellow-500 rounded-xl h-40 flex flex-col justify-between ">
            <div class="flex-1 flex items-center justify-center bg-white text-yellow-700 font-bold">
                <i class="fa-solid fa-handshake"> 0</i>
            </div>
            <div class="h-1/5 bg-yellow-100 text-yellow-700 text-center p-1 rounded-b-xl">
                RESERVAS
            </div>
        </div>

    </div>
</div>


<button class="p-2 bg-info-subtle text-info-emphasis mt-6 rounded-xl " data-bs-toggle="modal" data-bs-target="#myModal">
    Guardar Vehiculo
</button>


<div class="modal fade" id="myModal" tabindex="-1" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="myModalLabel">Vehiculo</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form class="row g-3 needs-validation" novalidate>
                    <div class="col-md-6">
                        <label for="marca" class="form-label">Marca</label>
                        <input type="text" class="form-control" id="marca" name="marca" maxlength="50" required>
                        <div class="valid-feedback">Looks good!</div>
                    </div>
                    <div class="col-md-6">
                        <label for="modelo" class="form-label">Modelo</label>
                        <input type="text" class="form-control" id="modelo" name="modelo" maxlength="50" required>
                        <div class="valid-feedback">Looks good!</div>
                    </div>
                    <div class="col-md-4">
                        <label for="anio" class="form-label">Año</label>
                        <input type="number" class="form-control" id="anio" name="anio" min="1900" max="2099" required>
                        <div class="invalid-feedback">Ingrese un año válido.</div>
                    </div>
                    <div class="col-md-4">
                        <label for="precio" class="form-label">Precio</label>
                        <input type="number" class="form-control" id="precio" name="precio" step="0.01" required>
                        <div class="invalid-feedback">Ingrese un precio válido.</div>
                    </div>
                    <div class="col-md-4">
                        <label for="estado" class="form-label">Estado</label>
                        <input type="text" class="form-control" id="estado" name="estado" maxlength="20" required>
                        <div class="valid-feedback">Looks good!</div>
                    </div>
                    <div class="col-12">
                        <button class="btn btn-primary" type="submit" onclick="cerrarModal()">Enviar </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<div id="divTabla">
</div>
