@{
    ViewData["Title"] = "Home Page";
}

<div class="pt-6 text-center">
    <h2 class="text-2xl font-semibold text-gray-800">Bienvenido al panel de administración</h2>
    <p class="text-lg text-gray-600 mt-2">Administra de manera eficiente clientes, empleados, pagos, reservas, vehículos y seguros.</p>

    <!-- Secciones -->
    <div class="mt-8 grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
        <!-- Sección de Clientes -->
        <div class="flex flex-col justify-center items-center bg-blue-50 rounded-lg p-4">
            <i class="fas fa-users fa-5x text-blue-500"></i>
            <h3 class="text-xl font-medium text-gray-700 mt-4">Clientes</h3>
            <p class="text-gray-500">Gestiona la información personal de los clientes y sus reservas.</p>
        </div>

        <!-- Sección de Empleados -->
        <div class="flex flex-col justify-center items-center bg-green-50 rounded-lg p-4">
            <i class="fas fa-briefcase fa-5x text-green-500"></i>
            <h3 class="text-xl font-medium text-gray-700 mt-4">Empleados</h3>
            <p class="text-gray-500">Administra los datos de los empleados y asigna tareas.</p>
        </div>

        <!-- Sección de Pagos -->
        <div class="flex flex-col justify-center items-center bg-yellow-50 rounded-lg p-4">
            <i class="fas fa-credit-card fa-5x text-yellow-500"></i>
            <h3 class="text-xl font-medium text-gray-700 mt-4">Pagos</h3>
            <p class="text-gray-500">Controla los pagos, métodos y fechas de las transacciones.</p>
        </div>

        <!-- Sección de Reservas -->
        <div class="flex flex-col justify-center items-center bg-red-50 rounded-lg p-4">
            <i class="fas fa-calendar-check fa-5x text-red-500"></i>
            <h3 class="text-xl font-medium text-gray-700 mt-4">Reservas</h3>
            <p class="text-gray-500">Gestiona las reservas de clientes y vehículos.</p>
        </div>

        <!-- Sección de Vehículos -->
        <div class="flex flex-col justify-center items-center bg-purple-50 rounded-lg p-4">
            <i class="fas fa-car fa-5x text-purple-500"></i>
            <h3 class="text-xl font-medium text-gray-700 mt-4">Vehículos</h3>
            <p class="text-gray-500">Administra los vehículos disponibles y su mantenimiento.</p>
        </div>

        <!-- Sección de Seguro -->
        <div class="flex flex-col justify-center items-center bg-teal-50 rounded-lg p-4">
            <i class="fas fa-shield-alt fa-5x text-teal-500"></i>
            <h3 class="text-xl font-medium text-gray-700 mt-4">Seguro</h3>
            <p class="text-gray-500">Gestiona los seguros de vehículos y servicios.</p>
        </div>
    </div>
</div>
